<Page
    x:Class="culinaryGuild.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:culinaryGuild"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid x:Name="grdMain">
        <NavigationView x:Name="navMenu" ItemInvoked="navMenu_ItemInvoked" PaneDisplayMode="LeftMinimal">
            <NavigationView.MenuItems>
                <NavigationViewItem Content="Home" Tag="Home" FontSize="14"/>
                <NavigationViewItem Content="Join Us" Tag="SignUp" FontSize="14"/>
                <NavigationViewItem Content="Contact" Tag="Contact" FontSize="14"/>
            </NavigationView.MenuItems>
            <Frame x:Name="frmMain"/>
        </NavigationView>

    </Grid>
</Page>
