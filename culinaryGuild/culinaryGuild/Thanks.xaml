<Page
    x:Class="culinaryGuild.Thanks"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:culinaryGuild"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid x:Name="grdThanks">
        <StackPanel x:Name="stackThanks" Width="200" Height="200" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,100,0,0" Visibility="Collapsed">
            <TextBlock x:Name="txtDisplay" TextWrapping="Wrap" Text="" FontSize="16" FontWeight="Bold"/>
            <Button x:Name="btnHome" Content="Home" Margin="0,50,0,0" HorizontalAlignment="Center" Click="btnHome_Click"/>
        </StackPanel>
    </Grid>
</Page>
